{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "db": {
    "driver": "sqlite",
    "connectionString": "Data Source=./data/fourCDesigner.db",
    "createTestUser": true
  },
  "email": {
    "smtpServer": "swiftly-bz-smtp.dynu.com",
    "smtpPort": 587,
    "sslMode": "startTls",
    "smtpUser": "no-reply@swiftly.bz",
    "mailAddressFrom": "no-reply@swiftly.bz",
    "sendingFrequencySeconds": 60,
    "pauseAfterErrorMinutes": 30,
    "maxRetryCount": 3,
    "delayBetweenMessagesSeconds": 1.0,
    "queueFolder": "./data/EmailQueue",
    "badEmailFolder": "./data/BadEmail",
    "sslAcceptAllCertificates": true,
    "disableSending": false
  },
  "system": {
    "defaultLanguage": "en",
    "session": {
      "tokenExpirationInSeconds": 300,
      "sessionExpirationInSeconds": 600
    },
    "passwordRules": {
      "minimumLength": 8,
      "requireCapitalLetter": true,
      "requireSmallLetter": true,
      "requireDigit": true,
      "requireSpecialSymbol": false
    },
    "throttle": {
      "enabled": true
    },
    "routing": {
      "externalProtocol": "http",
      "externalHost": "localhost",
      "externalPort": 5000,
      "externalPrefix": "",
      "useUrls": "http://localhost:5000"
    }
  },
  "ai": {
    "driver": "mock",
    "mock": {
      "file": "./data/ai-mock-responses.json"
    },
    "ollama": {
      "url": "http://127.0.0.1:11434",
      "model": "gemma3:27b",
      "maxTokens": 500,
      "timeoutSeconds": 120
    },
    "openai": {
      "url": "https://api.openai.com/v1",
      "model": "gpt-3.5-turbo",
      "maxTokens": 1000,
      "timeoutSeconds": 60
    }
  }
}